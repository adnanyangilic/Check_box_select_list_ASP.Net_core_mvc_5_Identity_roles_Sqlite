@model Checkboxselectlistradiobutton.Models.Player

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Player</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlayerName" class="control-label"></label>
                <input asp-for="PlayerName" class="form-control" />
                <span asp-validation-for="PlayerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedIdsstring" class="control-label"></label>
                <input id="SelectedIdsstring" type="hidden" asp-for="SelectedIdsstring" class="form-control" />
                <span asp-validation-for="SelectedIdsstring" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Loggedinuser" class="control-label"></label>
                <input asp-for="Loggedinuser" class="form-control" />
                <span asp-validation-for="Loggedinuser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                <input asp-for="ImagePath" class="form-control" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamId" class="control-label"></label>
                <select asp-for="TeamId" multiple class="form-control" asp-items="ViewBag.TeamId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AgeId" class="control-label"></label>
                <select asp-for="AgeId" class="form-control" asp-items="ViewBag.AgeId"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Living" /> @Html.DisplayNameFor(model => model.Living)
                </label>
            </div>
            <div class="form-group">
                <input type="file" name="resim" value="Select" class="btn btn-primary" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <link href="~/css/chosen.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/chosen.jquery.min.js"></script>


    <script>
        $("#TeamId").chosen();
    </script>
    <script>
        $("#TeamId")
            .change(function () {
                var teamsstr = "";
                var stringwithoutlastcomma = "";
                $("#TeamId option:selected").each(function () {
                    teamsstr += $(this).text() + ", ";
                    stringwithoutlastcomma = teamsstr.slice(0, -2);
                });
                $("#SelectedIdsstring").val(stringwithoutlastcomma);
            })
            .trigger("change");
    </script>









}
